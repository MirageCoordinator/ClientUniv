<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp">

        <TextView
            android:id="@+id/news_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Открыт зимний сезон"
            android:textColor="#2e5575"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/news_content_postdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31.12.2019"
            android:textColor="#979797" />

        <ImageView
            android:id="@+id/news_content_imgView_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/menu_home"
            android:layout_marginTop="8dp"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/news_content_small_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2019 год был отмечен плодотворной работой всего коллектива. Успехи студентов и преподавателей нашего вуза в образовательной, научной, творческой, спортивной…"
            android:textColor="#000"/>

</LinearLayout>